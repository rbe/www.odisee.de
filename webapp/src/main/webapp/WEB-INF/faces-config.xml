<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <!--
        Factories.
    -->
    <!--
    <factory>
        <exception-handler-factory>eu.artofcoding.odisee.workflow.webconsole.WorkflowExceptionHandlerFactory</exception-handler-factory>
    </factory>
    -->
    <!--
        Managed Beans.
    -->
    <!-- language -->
    <managed-bean>
        <managed-bean-name>language</managed-bean-name>
        <managed-bean-class>eu.artofcoding.beetlejuice.web.LanguageBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <!--
        Application.
    -->
    <application>
        <!--
            Multilanguage.
        -->
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
        <!-- Resource bundle for messages in menus
        <resource-bundle>
            <base-name>eu.artofcoding.odisee.resource.menu</base-name>
            <var>menumsg</var>
        </resource-bundle>
        -->
    </application>
</faces-config>
